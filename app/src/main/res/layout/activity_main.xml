<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:fontFamily="@font/arbutus_slab"
        android:text="@string/txtTitulo"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtRegistrarAlumno"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/btn_matricula"
        android:ems="8"
        android:fontFamily="@font/arbutus_slab"
        android:gravity="center"
        android:text="@string/btnRA"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtRegistrarClase"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_matricula"
        android:ems="8"
        android:fontFamily="@font/arbutus_slab"
        android:gravity="center"
        android:text="@string/btnRC"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/txtRegistrarAlumno"
        app:layout_constraintTop_toBottomOf="@+id/txtRegistrarAlumno" />

    <TextView
        android:id="@+id/txtRealizarMatricula"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_matricula"
        android:ems="8"
        android:fontFamily="@font/arbutus_slab"
        android:gravity="center"
        android:text="@string/btnRM"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/txtRegistrarClase"
        app:layout_constraintTop_toBottomOf="@+id/txtRegistrarClase" />

    <TextView
        android:id="@+id/txtIngresarNotas"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_matricula"
        android:ems="8"
        android:fontFamily="@font/arbutus_slab"
        android:gravity="center"
        android:text="@string/btnIN"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/txtRealizarMatricula"
        app:layout_constraintTop_toBottomOf="@+id/txtRealizarMatricula" />

    <ImageView
        android:id="@+id/imageViewRegistro"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icono" />

</androidx.constraintlayout.widget.ConstraintLayout>